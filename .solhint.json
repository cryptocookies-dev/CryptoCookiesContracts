{
  "extends": "solhint:recommended",
  "plugins": [
    "prettier"
  ],
  "rules": {
    "ordering": [
      "warn"
    ],
    "no-empty-blocks": [
      "off"
    ],
    "prettier/prettier": "error",
    "reason-string": [
      "warn",
      {
        "maxLength": 50
      }
    ],
    "compiler-version": [
      "error",
      "0.8.13"
    ],
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ]
  }
}
